<Window x:Class="PhotoStudioApp.Windows.AddPhotoHallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoStudioApp.Windows"
        mc:Ignorable="d"
        Title="AddPhotoHallWindow" Height="350" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Label Content="Выберите фото" HorizontalAlignment="Center" FontSize="26" FontWeight="DemiBold" Grid.Row="0"/>
        <Image x:Name="photo" Grid.Row="1" Source="/Resources/Pictures/noImages.png" MouseLeftButtonDown="Image_MouseLeftButtonDown"/>
        <Button x:Name="btSave" Grid.Row="2" Content="Сохранить" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Width="100" Click="Button_Click"/>
    </Grid>
</Window>
