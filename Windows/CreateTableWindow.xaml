<Window x:Class="PhotoStudioApp.Windows.CreateTableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoStudioApp.Windows"
        mc:Ignorable="d"
        Title="Формирование отчета" Height="300" Width="350"  WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/ThemeColor.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid>
        <StackPanel Background="{StaticResource Panel}">
            <Label Content="Формирование отчета" HorizontalAlignment="Center" FontSize="24" FontWeight="Bold"  Foreground="{StaticResource Text}"/>

            <StackPanel Orientation="Vertical" Margin="0 20">
                <RadioButton x:Name ="rbInAllTime" Content="За все время" FontSize="16" Margin="0 10" IsChecked="True" Checked="rbInAllTime_Checked"/>
                <RadioButton x:Name="rbDuringTime" Content="За промежуток времени" FontSize="16" IsChecked="False" Checked="rbDuringTime_Checked"/>
            </StackPanel>

            <StackPanel x:Name="spSelectTime" Orientation="Horizontal" HorizontalAlignment="Center" IsEnabled="False">
                <StackPanel>
                    <Label Content="Дата от" FontSize="16"/>
                    <DatePicker x:Name="dpStart" FontSize="16" Width="150"/>
                </StackPanel>

                <StackPanel Margin="20 0">
                    <Label Content="Дата после" FontSize="16"/>
                    <DatePicker x:Name="dpEnd" FontSize="16" Width="150"/>
                </StackPanel>
            </StackPanel>

            <Button x:Name="btCreateTable" Content="Создать таблицу" FontSize="16" Margin="0 20"  Background="{StaticResource BackgroundColor}" Width="150" Click="btCreateTable_Click"/>
        </StackPanel>
    </Grid>
</Window>
