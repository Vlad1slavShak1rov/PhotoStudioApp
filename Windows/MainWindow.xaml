<Window x:Class="PhotoStudioApp.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoStudioApp.Windows"
        mc:Ignorable="d"
        Title="Главное меню" Height="650" Width="1000" MinHeight="650" MinWidth="1000" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/ThemeColor.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style x:Key="ButtonOpacity" TargetType="Button">
                <Setter Property="Background" Value="#51f5ea"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#28c206"/>
                        <Setter Property="Opacity" Value="0.4"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="{StaticResource BackgroundColor}" >
        <!--Грид Клиента-->
        <Grid x:Name="CustomerGrid" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="{StaticResource Panel}" HorizontalAlignment="Stretch">
                <Grid HorizontalAlignment="Center" Margin="150 0 0 0">
                    <StackPanel Margin="0 0 450 0" HorizontalAlignment="Center">
                        <Button Name="CreateOrderButton" Height="60" Width="60" Margin="0 -1 0 -15" BorderBrush="{x:Null}" Style="{StaticResource ButtonOpacity}" Click="CreateOrderButton_Click">
                            <Button.Background>
                                <ImageBrush ImageSource="pack://application:,,,/Resources/Pictures/createBooking.png"/>
                            </Button.Background>
                        </Button>
                        <TextBlock Text="Забронировать" Foreground="{StaticResource Text}" FontSize="14" FontWeight="DemiBold"/>
                    </StackPanel>

                    <StackPanel Margin="0 0 200 0" HorizontalAlignment="Center">
                        <Button Name="ListBookingButton" HorizontalAlignment="Center" Height="36" Width="39" Margin="0 9 0 0" BorderBrush="{x:Null}" Style="{StaticResource ButtonOpacity}" Click="ListBookingButton_Click" >
                            <Button.Background>
                                <ImageBrush ImageSource="/Resources/Pictures/myOrderIco.png"/>
                            </Button.Background>
                        </Button>
                        <TextBlock Text="Мои бронировния" HorizontalAlignment="Center" Foreground="{StaticResource Text}" FontSize="14" FontWeight="DemiBold"/>
                    </StackPanel>

                    <StackPanel Margin="30 0 0 0" HorizontalAlignment="Center">
                        <Button Name="ListServicesButton" HorizontalAlignment="Center" Height="36" Width="39" Margin="0 9 0 0" BorderBrush="{x:Null}" Style="{StaticResource ButtonOpacity}" Click="ListServicesButton_Click" >
                            <Button.Background>
                                <ImageBrush ImageSource="pack://application:,,,/Resources/Pictures/cameraIco.png"/>
                            </Button.Background>
                        </Button>
                        <TextBlock Text="Список услуг" HorizontalAlignment="Center" Foreground="{StaticResource Text}" FontSize="14" FontWeight="DemiBold"/>
                    </StackPanel>


                    <StackPanel Margin="200 0 0 0" HorizontalAlignment="Center">
                        <Button Name="ReviewButton" HorizontalAlignment="Center" Height="36" Width="39" Margin="0 9 0 0" BorderBrush="{x:Null}" Style="{StaticResource ButtonOpacity}" Click="ReviewButton_Click" >
                            <Button.Background>
                                <ImageBrush ImageSource="/Resources/Pictures/viewsIco.png"/>
                            </Button.Background>
                        </Button>
                        <TextBlock Text="Отзывы" HorizontalAlignment="Center" Foreground="{StaticResource Text}" FontSize="14" FontWeight="DemiBold"/>
                    </StackPanel>
                </Grid>

                <StackPanel Margin="0 0 0 0" HorizontalAlignment="Right">
                    <Button x:Name="ExitButton" HorizontalAlignment="Right" Height="60" Width="60" Margin="0 -4 0 -11" Click="ExitButton_Click" BorderBrush="{x:Null}" Style="{StaticResource ButtonOpacity}">
                        <Button.Background>
                            <ImageBrush ImageSource="/Resources/Pictures/extIco.png"/>
                        </Button.Background>
                    </Button>
                    <TextBlock Text="Выход" HorizontalAlignment="Center" Foreground="{StaticResource Text}" FontSize="14" FontWeight="DemiBold"/>
                </StackPanel>

            </Grid>
            <Grid Name="MainGrid" Grid.Row="1">
            </Grid>
        </Grid>

        <!--Грид Работника-->
        <Grid x:Name="WorkerGrid" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Background="{StaticResource Panel}" HorizontalAlignment="Stretch">
                <Grid Margin="0 0 0 0" HorizontalAlignment="Center">
                    <StackPanel HorizontalAlignment="Left" Margin="0 0 400 0">
                        <Button Name="WorkerListBookingButton" HorizontalAlignment="Center" Height="36" Width="39" Margin="0 9 0 0" BorderBrush="{x:Null}" Style="{StaticResource ButtonOpacity}" Click="WorkerListBookingButton_Click" >
                            <Button.Background>
                                <ImageBrush ImageSource="/Resources/Pictures/myOrderIco.png"/>
                            </Button.Background>
                        </Button>
                        <TextBlock Text="Текущие брони" HorizontalAlignment="Center" Foreground="{StaticResource Text}" FontSize="14" FontWeight="DemiBold"/>
                    </StackPanel>

                    <StackPanel HorizontalAlignment="Center">
                        <Button Name="SettingsButton" HorizontalAlignment="Center" Height="36" Width="39" Margin="0 9 0 0" BorderBrush="{x:Null}" Style="{StaticResource ButtonOpacity}" Click="SettingsButton_Click" >
                            <Button.Background>
                                <ImageBrush ImageSource="/Resources/Pictures/settings.png"/>
                            </Button.Background>
                        </Button>
                        <TextBlock Text="Настройки" HorizontalAlignment="Center" Foreground="{StaticResource Text}" FontSize="14" FontWeight="DemiBold"/>
                    </StackPanel>

                    <StackPanel Margin="400 0 0 0" HorizontalAlignment="Center">
                        <Button x:Name="ExitButton1" HorizontalAlignment="Right" Height="60" Width="60" Margin="0 -4 0 -11" Click="ExitButton_Click" BorderBrush="{x:Null}" Style="{StaticResource ButtonOpacity}" >
                            <Button.Background>
                                <ImageBrush ImageSource="/Resources/Pictures/extIco.png"/>
                            </Button.Background>
                        </Button>
                        <TextBlock Text="Выход" HorizontalAlignment="Center" Foreground="{StaticResource Text}" FontSize="14" FontWeight="DemiBold" />
                    </StackPanel>
                </Grid>
            </Grid>

            <Grid x:Name="WorkerMainPanel" Grid.Row="1"/>
        </Grid>

        <!--Грид Админа-->
        <Grid x:Name="AdminGrid" Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Background="{StaticResource Panel}" HorizontalAlignment="Stretch">
                <Grid HorizontalAlignment="Center">
                    <StackPanel Margin="0 0 300 0" HorizontalAlignment="Left">
                        <Button Name="AllBooking" Height="36" Width="39" Margin="0 9 0 0" BorderBrush="{x:Null}" Style="{StaticResource ButtonOpacity}" Click="AllBooking_Click" >
                            <Button.Background>
                                <ImageBrush ImageSource="/Resources/Pictures/myOrderIco.png"/>
                            </Button.Background>
                        </Button>
                        <TextBlock Text="Все бронирования" HorizontalAlignment="Center" Foreground="{StaticResource Text}" FontSize="14" FontWeight="DemiBold"/>
                    </StackPanel>

                    <StackPanel Margin="0 0 0 0">
                        <Button Name="AllWorkerButton"  Height="36" Width="39" Margin="0 9 0 0" BorderBrush="{x:Null}" Style="{StaticResource ButtonOpacity}" Click="AllWorkerButton_Click" >
                            <Button.Background>
                                <ImageBrush ImageSource="/Resources/Pictures/workerIco.png"/>
                            </Button.Background>
                        </Button>
                        <TextBlock Text="Сотрудники" HorizontalAlignment="Center" Foreground="{StaticResource Text}" FontSize="14" FontWeight="DemiBold"/>
                    </StackPanel>

                    <StackPanel Margin="300 0 0 0" HorizontalAlignment="Left">
                        <Button Name="AllServiceButton" HorizontalAlignment="Center" Height="36" Width="39" Margin="0 9 0 0" BorderBrush="{x:Null}" Style="{StaticResource ButtonOpacity}" Click="AllServiceButton_Click" >
                            <Button.Background>
                                <ImageBrush ImageSource="pack://application:,,,/Resources/Pictures/cameraIco.png"/>
                            </Button.Background>
                        </Button>
                        <TextBlock Text="Список услуг" HorizontalAlignment="Center" Foreground="{StaticResource Text}" FontSize="14" FontWeight="DemiBold"/>
                    </StackPanel>
                </Grid>
                <StackPanel Margin="0 0 0 0" HorizontalAlignment="Right">
                    <Button x:Name="ExitButtonAdm" HorizontalAlignment="Right" Height="60" Width="60" Margin="0 -4 0 -11" Click="ExitButton_Click" BorderBrush="{x:Null}" Style="{StaticResource ButtonOpacity}">
                        <Button.Background>
                            <ImageBrush ImageSource="/Resources/Pictures/extIco.png"/>
                        </Button.Background>
                    </Button>
                    <TextBlock Text="Выход" HorizontalAlignment="Center" Foreground="{StaticResource Text}" FontSize="14" FontWeight="DemiBold"/>
                </StackPanel>
            </Grid>

            <Grid Name="AdminMainPanel" Grid.Row="1"/>
        </Grid>
    </Grid>
</Window>
