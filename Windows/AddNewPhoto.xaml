<Window x:Class="PhotoStudioApp.Windows.AddNewPhoto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoStudioApp.Windows"
        mc:Ignorable="d"
        Title="Добавить фото" Height="450" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        
        
        <Label Content="Фотография вашей работы" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="24"/>
        <Image x:Name="photo" Grid.Row="1" MouseLeftButtonDown="photo_MouseLeftButtonDown" Cursor="Hand" Stretch="Uniform" Source="/Resources/Pictures/noImages.png"/>
        <TextBox x:Name="tbDescription" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Text="Комментарий к работе (необязательно)" Grid.Row="2" FontSize="16" TextWrapping="WrapWithOverflow"  GotFocus="tbDescription_GotFocus" LostFocus="tbDescription_LostFocus" Foreground="LightGray"/>
        <Button x:Name="btSave" Content="Сохранить" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Center" Height="30" Width="120" Click="btSave_Click"/>
        <Button x:Name="btRemove" Content="Удалить" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center" Height="30" Width="120" Click="btRemove_Click"/>
    </Grid>
</Window>
