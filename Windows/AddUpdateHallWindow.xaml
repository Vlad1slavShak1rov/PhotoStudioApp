<Window x:Class="PhotoStudioApp.Windows.AddUpdateHallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoStudioApp.Windows"
        mc:Ignorable="d"
        Title="Добавление/Редактирование зала" Height="260" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <Label Content="Название" FontSize="16" HorizontalAlignment="Center"/>
            <TextBox x:Name="tbName" FontSize="16" HorizontalAlignment="Left" Width="250" TextWrapping="Wrap" MaxLength="64" PreviewTextInput="tbName_PreviewTextInput"/>

            <Label Content="Стоимость" FontSize="16" HorizontalAlignment="Center"/>
            <TextBox x:Name="tbCost" FontSize="16" HorizontalAlignment="Center" Width="150" PreviewTextInput="tbCost_PreviewTextInput"/>

            <StackPanel Margin="10">
                <Button x:Name ="btSave" Content="Сохранить" Margin="0 10" Click="btSave_Click"/>
                <Button x:Name ="btRemove" Content="Удалить" Visibility="Collapsed" Click="btRemove_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
