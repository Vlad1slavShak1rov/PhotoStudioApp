<UserControl x:Class="PhotoStudioApp.Views.ListServices"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhotoStudioApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
        <ResourceDictionary.MergedDictionaries>
            <ResourceDictionary Source="/Resources/ThemeColor.xaml" />
        </ResourceDictionary.MergedDictionaries>
        <Style x:Key="ButtonOpacity" TargetType="Button">
            <Setter Property="Background" Value="#51f5ea"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#28c206"/>
                    <Setter Property="Opacity" Value="0.4"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Background="{DynamicResource Text}"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="0">
            <StackPanel Margin="0 0 50 0">
                <TextBlock Text="Фильтрация" HorizontalAlignment="Center"/>
                <ComboBox Name="FilteretCombobox" Width="150" SelectedIndex="0" SelectionChanged="ComboBox_SelectionChanged">
                    <ComboBoxItem>
                        <TextBlock Foreground="Black">Все</TextBlock>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <TextBlock Foreground="Black">Основные услуги</TextBlock>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <TextBlock Foreground="Black">Доп. услуги</TextBlock>
                    </ComboBoxItem>
                </ComboBox>
            </StackPanel>

            <StackPanel Margin="0 0 50 0">
                <TextBlock Text="Поиск" HorizontalAlignment="Center"/>
                <TextBox Name="SearchTextBox" Width="150" TextChanged="SearchTextBox_TextChanged"/>
            </StackPanel>
        </StackPanel>

        <ScrollViewer Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <StackPanel x:Name="StackPanelServices"/>
        </ScrollViewer>
    </Grid>
</UserControl>
