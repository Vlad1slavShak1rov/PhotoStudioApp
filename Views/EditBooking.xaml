<UserControl x:Class="PhotoStudioApp.Views.EditBooking"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhotoStudioApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="550">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/ThemeColor.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Background="{StaticResource Panel}">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
 
        </Grid.RowDefinitions>
        <Label Content="Редактирование бронирования" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="{StaticResource Text}"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Margin="0 0 0 0" Grid.Row="1">
                <Label Content="Фотограф" FontSize="18" FontWeight="DemiBold" Foreground="{StaticResource Text}"/>
                <ComboBox Name="PhotographBox" Width="175" HorizontalAlignment="Left" FontSize="16" Margin="5 0 0 0">
                    <ComboBoxItem Content="Без фотографа"/>
                </ComboBox>

                <Label Content="Визажист" FontSize="18" FontWeight="DemiBold" Foreground="{StaticResource Text}"/>
                <ComboBox Name="VisagisteBox" Width="175" HorizontalAlignment="Left" FontSize="16" Margin="5 0 0 0">
                    <ComboBoxItem Content="Без визажиста"/>
                </ComboBox>

                <Label Content="Холл" FontSize="18" FontWeight="DemiBold" Foreground="{StaticResource Text}"/>
                <ComboBox Name="HallBox" Width="175" HorizontalAlignment="Left" FontSize="16" Margin="5 0 0 0"/>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <Label Content="Основная услуга" FontSize="18" FontWeight="DemiBold" Foreground="{StaticResource Text}"/>
                <ComboBox x:Name="ServiceBox" Width="250" HorizontalAlignment="Left" FontSize="16" Margin="5 0 0 0"  SelectedIndex="0">
                    <ComboBoxItem Content="Без услуги"/>
                </ComboBox>

                <Label Content="Дополнительная услуга" FontSize="18" FontWeight="DemiBold" Foreground="{StaticResource Text}"/>
                <ComboBox Name="AddServiceBox" Width="250" HorizontalAlignment="Left" FontSize="14" Margin="5 0 0 0" SelectionChanged="AddServiceBox_SelectionChanged" SelectedIndex="0">
                    <ComboBoxItem Content="Без услуги"/>
                </ComboBox>

                <Label Content="Стоимость" FontSize="18" FontWeight="DemiBold" Foreground="{StaticResource Text}"/>
                <TextBox Name="CostBox" Width="175" HorizontalAlignment="Left" FontSize="18" Margin="5 0 0 0" IsReadOnly="True"/>

                <Button Name="SaveButton" Content="Сохранить" Margin="0 20 0 5" Width="75" Background="{StaticResource ButtonColor}" Foreground="{StaticResource Text}" Click="SaveButton_Click"/>
                <Button Name="BackButton" Content="Назад"  Width="75" Margin="0 0 0 20" Background="{StaticResource ButtonColor}" Foreground="{StaticResource Text}" Click="BackButton_Click"/>
            </StackPanel>
        </Grid>
       
    </Grid>
</UserControl>
