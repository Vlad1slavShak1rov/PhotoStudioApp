<UserControl x:Class="PhotoStudioApp.Views.WorkerCards"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhotoStudioApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="600">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/ThemeColor.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Expander Name="WorkerExpander" Header="ФИО: Иван Иванов Иванович      Должность:Фотограф" Background="White" FontSize="18">
        <StackPanel VerticalAlignment="Stretch">
            <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                <Label Content="Услуги за сотрудником: "/>
                <ComboBox Name="AllBookingCB" Width="350" SelectedIndex="0"/>
            </StackPanel>

            <Grid x:Name="AdminPanel" HorizontalAlignment="Right" Margin="0 10 0 0">
                <StackPanel  Orientation="Horizontal">
                    <Button Name = "EditButton" Content="Изменить" Margin="0 0 20 0" Click="EditButton_Click"/>
                    <Button Name = "DeleteButton" Content="Удалить" Click="DeleteButton_Click"/>
                </StackPanel>
            </Grid>
           
            
        </StackPanel>
    </Expander>
</UserControl>
