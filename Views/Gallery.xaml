<UserControl x:Class="PhotoStudioApp.Views.Gallery"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhotoStudioApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/ThemeColor.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="{StaticResource Text}" >
            <TextBlock Text="Галерея" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" FontWeight="ExtraBlack" Foreground="{StaticResource add}"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <Label Content="Фильтры" FontSize="16"/>
                <StackPanel Margin="0 10">
                    <RadioButton x:Name="rbHall" Content="Наши залы" Margin="0 10" FontSize="16" Checked="rbHall_Checked"/>
                    <RadioButton x:Name="rbWorkerWorks" Content="Наши работы" FontSize="16" Checked="rbHall_Checked"/>
                </StackPanel>

                <StackPanel x:Name="hallFiltrationPanel" Visibility="Collapsed">
                    <Label Content="Зал" FontSize="16"/>
                    <ComboBox x:Name="cbHalls" FontSize="16" SelectionChanged="cbHalls_SelectionChanged"/>
                </StackPanel>

                <StackPanel x:Name="workerFiltrationPanel" Visibility="Collapsed">
                    <Label Content="Зал" FontSize="16"/>
                    <ComboBox x:Name="cbWorker" FontSize="16" SelectionChanged="cbWorker_SelectionChanged"/>
                </StackPanel>
            </StackPanel>

            <ScrollViewer Grid.Column="1" Margin="20 0 0 0">
                <WrapPanel x:Name="photoPanel" VerticalAlignment="Top" >

                </WrapPanel>
            </ScrollViewer>
        </Grid> 
    </Grid>
</UserControl>
