<UserControl x:Class="PhotoStudioApp.Views.BookingCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhotoStudioApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="270" d:DesignWidth="620">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/ThemeColor.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Expander Name="BookingCardExpander" Header="Основная услуга+дата" Background="White" FontSize="16" FontWeight="Bold">
        <StackPanel>
            <Label Content="Сотрудники:" FontWeight="Bold" FontSize="16"/>
            <StackPanel Orientation="Horizontal">
                <Label Name="PhotographLabel" Content="Фотограф: Иван Иванов" Margin="0 0 0 0" FontSize="14" FontWeight="Bold" Foreground="{StaticResource Text}"/>
                <Label Name="VisagisteLabel" Content="Визажист: Иван Иванов" FontSize="14" FontWeight="Bold" Foreground="{StaticResource Text}"/>
            </StackPanel>
            <Label Content="Услуги:" FontWeight="Bold" FontSize="16"/>
            <StackPanel Orientation="Horizontal">
                <Label Name="ServiceLabel" Content="Основная услуга: Иван Иванов" Margin="0 0 0 0" FontSize="14" FontWeight="Bold" Foreground="{StaticResource Text}"/>
                <Label Name ="AddServiceLabel" Content="Дополнительная: Иван Иванов" Margin="0 0 0 0" FontSize="14" FontWeight="Bold" Foreground="{StaticResource Text}"/>
            </StackPanel>
            <Label Content="Место:" FontWeight="Bold" FontSize="16"/>
            <StackPanel Orientation="Horizontal">
                <Label Name="HallLabel" Content="Холл: " FontSize="14" FontWeight="Bold" Foreground="{StaticResource Text}"/>
            </StackPanel>
            <Label Content="Место:" FontWeight="Bold" FontSize="16"/>
            <StackPanel Orientation="Horizontal">
                <Label Name="CostLabel" Content="Стоимость: " FontSize="14" FontWeight="Bold" Foreground="{StaticResource Text}"/>
            </StackPanel>
        </StackPanel>
    </Expander>
</UserControl>
