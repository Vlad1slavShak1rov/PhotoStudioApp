<UserControl x:Class="PhotoStudioApp.Views.ServiceCardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhotoStudioApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="500">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/ThemeColor.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Expander Name="ServiceCardExpander" Background="White" Header="Услуга:услуга" FontSize="20" FontWeight="Bold" Foreground="{StaticResource Text}">
        <Expander.Content>
            <StackPanel Orientation="Vertical" VerticalAlignment="Stretch">
                <Label  Content="Описание:" FontSize="16" FontWeight="Bold" />
                <TextBlock Name="DescriptionLabel" Margin="6 0 0 0" TextWrapping="Wrap" Text="тут какой-то текст" FontSize="16" FontWeight="Bold" Foreground="{StaticResource Text}"/>
                <Label Name="TypeOfServiceLabel" Content="Тип услуги: " FontSize="14" FontWeight="Bold" Foreground="{StaticResource Text}"/>
                <Label Name="CostLabel" Content="Стоимость: " FontSize="14" FontWeight="Bold" Foreground="{StaticResource Text}"/>

                <StackPanel Name="AdminButtons" Orientation="Horizontal" Margin="0 20 0 0" Visibility="Collapsed">
                    <Button Name="EditButton" Content="Изменить" Background="{StaticResource Panel}" FontSize="14" Margin="0 0 10 0" Click="EditButton_Click"/>
                    <Button Name="DeleteButton" Content="Удалить" Background="{StaticResource Panel}" FontSize="14" Click="DeleteButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Expander.Content>
    </Expander>
</UserControl>
