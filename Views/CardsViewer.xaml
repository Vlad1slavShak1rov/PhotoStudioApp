<UserControl x:Class="PhotoStudioApp.Views.CardsViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhotoStudioApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="110" d:DesignWidth="650">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/ThemeColor.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Background="White">
        <StackPanel>
            <Grid>
                <Label Name="NameLabel" Content="Иван Иванов" FontSize="14" FontWeight="Bold" Margin="10 0 0 0"/>
                <Label Name="RateLabel" Content="Оценка: 5" FontSize="14" FontWeight="Bold" HorizontalAlignment="Right" Margin="0 0 13 0"/>
            </Grid>
            <TextBlock x:Name="ViewsBlock" Margin="15 0 120 0" TextWrapping="Wrap" FontWeight="Bold" FontSize="14" Foreground="{StaticResource add}">Все было шикарно</TextBlock>
        </StackPanel>
        <Label Name="DatePublicateLabel" Content="01.01.2024" VerticalAlignment="Bottom" HorizontalAlignment="Right" FontSize="16" FontWeight="DemiBold"/>
    </Grid>
</UserControl>
